generator client {
  provider      = "prisma-client-js" 
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id          Int      @id @default(autoincrement())
  city        String   
  title       String
  link        String   @unique
  description String?
  imageUrl    String?
  source      String?  
  pubDate     DateTime
  createdAt   DateTime @default(now())

  
  @@index([city, pubDate])
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   
  city      String   
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  @@map("users") 
}